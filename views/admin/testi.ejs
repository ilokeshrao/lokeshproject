<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Document</title>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
      <link rel="stylesheet" href="/admin/css/style.css">
    </head>
<body>
   <%- include('../../partials/admin/header.ejs')%>
    <section id="mid">
        <div class="container">
            <div class="row">
   <%- include('../../partials/admin/left.ejs')%>
                <div class="col-md-9">
            <h2>Testinominals Management</h2>
            <table class="table table-hover">
                <tr>
                    <th colspan="3"><h5 class="text-center"> Testi Dashboard</h5></th>
                </tr>
                <tr>
                    <td>Total service:<%=ttesti%></td>
                    <td>Unpublished:<%=utesti%></td>
                    <td>Published:<%=ptesti%></td>
                </tr>
            </table>
            <h4>Search by status</h4>
            <form action="" method="post">
                <label for=""> select status</label>
                <select name="search" id="" class="form-select">
                    <option value=""> Select one status...</option>
                    <option value="Unpublished"> Unpublished</option>
                    <option value="Published">Published</option>
                </select>
                <button type="submit" class="btn btn-warning form-control mt-3 mb-4">Search</button>

            </form>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>S.No</th>
                        <th>Image</th>
                        <!-- <th>Image 1</th> -->
                        <th>Quotes</th>
                        <th>Customer company/Name</th>
                        <th>Posted Date</th>
                        <th>Status </th>
                        <th>Delete status</th>
                    </tr>
                </thead>
                <tbody>
                    <%record.forEach((result,key)=>{%>
                        <tr> 
                            <td><%=key+1%></td>
                            <td><img width="50px" src="/upload/<%=result.img%>" alt=""></td>
                            <!-- <td><img width="50px" src="/upload/<%=result.img1%>" alt=""></td> -->
                            <td><%=result.quotes%></td>
                            <td><%=result.name%></td>
                            <td><%=result.postedDate%></td>
                            <%if(result.status=='Published'){%>
                            <td><a href="/admin/testistatusupdate/<%=result.id%>"><button class="btn btn-success" ><%=result.status%></button></a></td>
                           <%}else{%>
                            <td><a href="/admin/testistatusupdate/<%=result.id%>"><button class="btn btn-danger" ><%=result.status%></button></a></td>
                                <%}%>
                                <td><a href="/admin/testidelete/<%= result.id%>"><i class="bi bi-trash"></i></a></td>

                        </tr>
                       
                    <%})%>

                    <%if(record.length==0){%>
                        <tr>
                            <td colspan="7"><h4 class="text-center">No Record Found</h4></td>
                        </tr>
                        <%}%>
                       
                </tbody>
                </table>
            
                </div>
            </div>
        </div>
    </section>


   <%- include('../../partials/admin/footer.ejs')%>
   
</body>
</html>